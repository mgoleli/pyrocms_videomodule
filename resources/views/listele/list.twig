    <script>

        function  deleteA(e) {

            if (!confirm('Are you sure you want to delete?')) {
                return false;
            }
            //e.preventDefault();
            var id = $(e).data("id");
           // console.log(id);
            $.ajax({
                type: 'DELETE',
                url: 'videos/videosAjaxDelete/' + id,

                success: function (data) {
                    alert(data.message);
                    //location.reload();
                    fetch_customer_data()
                },
                error: function (data) {
                    alert('hata');
                }
            });

        }

        function editA (e) {
            $('#exampleModal3').modal('show');

            var tr = $(e).closest('tr');
           // console.log(tr.html());
            var data = tr.children('td').map(function () {
                return $(this).text();
            }).get();
            console.log(data);
            $('#id').val(data[0]);
            $('#name').val(data[1]);
            $('#video').val(data[2]);
            $('#summary').val(data[3]);
        }

        function fetch_customer_data(query = '') {
            $.ajax({
                url: "videos/searchdb",
                method: 'GET',
                data: {query: query},
                dataType: 'json',
                success: function (data) {
                    $('tbody').html(data.videos);
                    $('#total_records').text(data.total_data);

                    $.each(data.videos, function(index, value) {
                        console.log(value);
                        $("#myTable").append("<tr>" +
                            " <td>"+ value.id + " </td>" +
                            "<td>"+ value.name + " </td> " +
                            "<td>"+ value.video + " </td> " +
                            "<td>" + value.summary + "</td>" +
                            "<td><a onclick='editA(this)' class='btn btn-sm btn-success editbtn'>Edit</a></td>" +
                            "<td><a  data-id = ' "+ value.id +" ' onclick='deleteA(this)' class='btn btn-sm btn-danger btn-danger'>Delete</a>" +
                            "</td>" +
                            "</tr>"

                        )
                    });


                }
            })
        }

        $(document).ready(function() {

            fetch_customer_data();

            $(document).on('keyup', '#search', function(){
                if(this.value.match(/[^a-zA-Z]/g)){
                    this.value = this.value.replace(/[^a-zA-Z]/g, '');
                }
                var query = $(this).val();
                fetch_customer_data(query);
            });
        });

        $(document).on('keyup', '.name', function () {
            if(this.value.match(/[^a-zA-Z]/g)) {
                this.value = this.value.replace(/[^a-zA-Z]/g, '');
            }
        });
    </script>

