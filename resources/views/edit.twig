{% include "theme::partials/scripts" %}
<head>
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <title>Todo List</title>
    {% block metadata %}
        {% include "theme::partials/metadata" %}
    {% endblock %}
</head>

<div class="container">
    <div class="col-md-6">
        <div class="row px-2">
            <form >
                <div class="form-group">
                    <input type="hidden" name="id" class="form-control" value="{{video.id}}">
                    <label>Name:</label>
                    <input type="text" name="name" class="form-control" value="{{video.name}}">
                </div>

                <div class="form-group">
                    <label>Video:</label>
                    <input type="text" name="video" class="form-control" value="{{video.video}}">
                </div>

                <div class="form-group">
                    <label>Summary:</label>
                    <input type="text" name="summary" class="form-control" value="{{video.summary}}">
                </div>

                <div class="form-group">
                    <button class="btn btn-success btn-submit">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    $.ajaxSetup({
        headers: {
            'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
        }
    });
    $(".btn-submit").click(function(e){
        e.preventDefault();
        var id = $("input[name=id]").val();
        var name = $("input[name=name]").val();
        var video = $("input[name=video]").val();
        var summary = $("input[name=summary]").val();
        $.ajax({
            type:'PUT',
            url:'/videos/videosAjaxUpdate/' + id,
            data:{id: id, name:name, video:video},
